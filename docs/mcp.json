{
  "workspace": "DigitalTwinIII",
  "description": "MCP configuration for Digital Twin III Cyber-Hardened Portfolio",
  "agents": [
    {
      "name": "ContentCreator",
      "description": "Handles blog post creation, project documentation, and security summaries.",
      "model": "gpt-4-turbo",
      "temperature": 0.8,
      "tools": [
        {
          "name": "create_blog_post",
          "description": "Create a new blog post in markdown format",
          "parameters": {
            "title": "string",
            "content": "string",
            "tags": "array of strings"
          }
        },
        {
          "name": "update_project",
          "description": "Update project documentation",
          "parameters": {
            "projectId": "string",
            "updates": "object"
          }
        },
        {
          "name": "generate_security_summary",
          "description": "Summarize recent security events",
          "parameters": {
            "timeRange": ["24h", "7d", "30d"],
            "format": ["brief", "detailed"]
          }
        }
      ]
    },
    {
      "name": "SecurityGuardian",
      "description": "Detects threats including SQLi, XSS, prompt injection, and bot activity.",
      "model": "gpt-4-turbo",
      "temperature": 0.1,
      "tools": [
        {
          "name": "analyzeInput",
          "description": "Analyze incoming messages for potential threats",
          "parameters": {
            "input": "string",
            "context": {
              "ip": "string",
              "userAgent": "string"
            }
          }
        }
      ]
    },
    {
      "name": "DigitalTwinPersona",
      "description": "Acts as the digital twin conversational agent",
      "model": "latest OpenAI GPT model",
      "temperature": 0.7,
      "tools": [
        {
          "name": "getPersonaResponse",
          "description": "Generate a persona-based response",
          "parameters": {
            "messages": "array of conversation messages"
          }
        }
      ]
    }
  ],
  "sandboxEndpoints": [
    {
      "path": "/sandbox/sql",
      "description": "Simulate SQL injection detection and logging",
      "preferredAction": "LOG_ONLY"
    },
    {
      "path": "/sandbox/xss",
      "description": "Simulate XSS detection and CSP enforcement",
      "preferredAction": "LOG_ONLY"
    },
    {
      "path": "/sandbox/rate-limit",
      "description": "Simulate rate-limit scenarios",
      "preferredAction": "CHALLENGE"
    }
  ],
  "logging": {
    "backend": "Supabase",
    "eventsTable": "security_events",
    "criticalNotification": true
  },
  "telemetry": {
    "waf": "Arcjet",
    "dashboardMetrics": true
  },
  "version": "1.0.0"
}
